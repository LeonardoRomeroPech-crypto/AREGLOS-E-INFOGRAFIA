import tkinter as tk
from tkinter import messagebox

USUARIOS = {
    "gerente": {"password": "1234", "rol": "Gerente"},
    "cajero": {"password": "5678", "rol": "Cajero"},
    "almacen": {"password": "abcd", "rol": "Almacenista / Receptor de Mercancía"}
}

def validar_login():
    usuario = entry_usuario.get()
    contrasena = entry_contrasena.get()

    if usuario in USUARIOS and USUARIOS[usuario]["password"] == contrasena:
        rol = USUARIOS[usuario]["rol"]
        messagebox.showinfo("Acceso", f"Bienvenido {rol}")
        login.destroy()
        abrir_ventana_rol(rol)
    else:
        messagebox.showerror("Error", "Usuario o contraseña incorrectos")

def abrir_ventana_rol(rol):
    ventana = tk.Tk()
    ventana.title(f"Panel - {rol}")
    ventana.geometry("400x200")

    tk.Label(
        ventana,
        text=f"Has iniciado sesión como:\n{rol}",
        font=("Arial", 14)
    ).pack(expand=True)

    ventana.mainloop()

login = tk.Tk()
login.title("Inicio de Sesión")
login.geometry("300x200")
login.resizable(False, False)

tk.Label(login, text="Usuario").pack(pady=5)
entry_usuario = tk.Entry(login)
entry_usuario.pack()

tk.Label(login, text="Contraseña").pack(pady=5)
entry_contrasena = tk.Entry(login, show="*")
entry_contrasena.pack()

tk.Button(login, text="Iniciar sesión", command=validar_login).pack(pady=15)

login.mainloop()
